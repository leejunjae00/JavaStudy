package studyKorea02ifexample;

public class SwitchCase1 {
	public static void main(String[] args) {
		int rank = 2;
		char medalColor;
		
		if(rank == 1) {
			medalColor = 'G';
		}else if(rank == 2) {
			medalColor = 'S';
		}else if(rank == 3) {
			medalColor = 'B';
		}else {
			medalColor = 'N';
			
		}
		//System.out.println(rank + "등 메달의 색깔은 " + medalColor + " 입니다.");
		
		switch(rank){
		case 1:
			medalColor ='G';
			break;
		case 2:
			medalColor ='S';
			break;
		case 3:
			medalColor ='B';
			break;
		default:
			medalColor ='N';
		}
		
		System.out.println(rank + "등 메달의 색깔은" + medalColor + "입니다.");
	}
}
